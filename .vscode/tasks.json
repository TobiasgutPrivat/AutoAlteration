{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Copy Data",
            "type": "shell",
            "command": "dotnet build",  // Adjust this if you're using another build system
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "Copy Data",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Copy Data",
            "type": "shell",
            "command": "./PostBuild.ps1",  // Use PostBuild.bat if you're using the batch script
            "group": {
                "kind": "none",
                "isDefault": false
            }
        }
    ]
}
